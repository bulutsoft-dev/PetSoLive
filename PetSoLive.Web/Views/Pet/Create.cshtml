@using Microsoft.Extensions.Localization
@using PetSoLive.Web.Controllers
@inject IStringLocalizer<PetController> Localizer

@{
    ViewData["Title"] = Localizer["CreatePetTitle"];
    Layout = "_Layout";
}

@section HeadSection {
    <link rel="stylesheet" href="~/css/pet.css" />
}

<div class="pet-page">
    <h2 class="pet-title">@Localizer["CreatePetTitle"]</h2>

    <div class="pet-container pet-form">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-controller="Pet" asp-action="Create" method="post" enctype="multipart/form-data">
            <!-- Pet Name -->
            <div class="form-group">
                <label for="Name">@Localizer["PetName"]</label>
                <input type="text" class="form-control" id="Name" name="Name" required />
            </div>

            <!-- Species -->
            <div class="form-group">
                <label for="Species">@Localizer["Species"]</label>
                <input type="text" class="form-control" id="Species" name="Species" required />
            </div>

            <!-- Breed -->
            <div class="form-group">
                <label for="Breed">@Localizer["Breed"]</label>
                <input type="text" class="form-control" id="Breed" name="Breed" required />
            </div>

            <!-- Age -->
            <div class="form-group">
                <label for="Age">@Localizer["Age"]</label>
                <input type="number" class="form-control" id="Age" name="Age" required />
            </div>

            <!-- Gender -->
            <div class="form-group">
                <label>@Localizer["Gender"]</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="Male" name="Gender" value="Male" required />
                    <label class="form-check-label" for="Male">@Localizer["Male"]</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="Female" name="Gender" value="Female" required />
                    <label class="form-check-label" for="Female">@Localizer["Female"]</label>
                </div>
            </div>

            <!-- Weight -->
            <div class="form-group">
                <label for="Weight">@Localizer["Weight"]</label>
                <input type="number" step="0.1" class="form-control" id="Weight" name="Weight" required />
            </div>

            <!-- Color -->
            <div class="form-group">
                <label for="Color">@Localizer["Color"]</label>
                <input type="text" class="form-control" id="Color" name="Color" required />
            </div>

            <!-- Date of Birth -->
            <div class="form-group">
                <label for="DateOfBirth">@Localizer["DateOfBirth"]</label>
                <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" required />
            </div>

            <!-- Description -->
            <div class="form-group">
                <label for="Description">@Localizer["Description"]</label>
                <textarea class="form-control" id="Description" name="Description" rows="3" required></textarea>
            </div>

            <!-- Image Upload -->
            <div class="form-group">
                <label for="image">@Localizer["ImageUpload"]</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*" />
            </div>

            <!-- Vaccination Status -->
            <div class="form-group">
                <label for="VaccinationStatus">@Localizer["VaccinationStatus"]</label>
                <input type="text" class="form-control" id="VaccinationStatus" name="VaccinationStatus" />
            </div>

            <!-- Microchip ID -->
            <div class="form-group">
                <label for="MicrochipId">@Localizer["MicrochipId"]</label>
                <input type="text" class="form-control" id="MicrochipId" name="MicrochipId" />
            </div>

            <!-- Is Neutered -->
            <div class="form-group">
                <label for="IsNeutered">@Localizer["IsNeutered"]</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="IsNeutered" name="IsNeutered" value="true" />
                    <label class="form-check-label" for="IsNeutered">@Localizer["IsNeuteredYes"]</label>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn-pet">@Localizer["CreatePetButton"]</button>
        </form>
    </div>
</div>